<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/10.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
  <center>
    <TextArea fx:id="messagesField" editable="false" prefHeight="200.0" prefWidth="200.0"
              BorderPane.alignment="CENTER"/>
  </center>
  <bottom>
    <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
      <children>
        <Button mnemonicParsing="false" onAction="#onClear" text="%list.clear.buttonText"/>
      </children>
    </HBox>
  </bottom>
</BorderPane>
